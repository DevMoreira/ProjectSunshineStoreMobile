<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="container_components">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_container_form</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/container_form_edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="buttons_screen_login">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="buttons_screen_register" parent="buttons_screen_login">

    </style>

    <style name="button_translation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/buttons</item>
    </style>

    <style name="container_options_presentation">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/background_clothes</item>
    </style>

    <style name="description_options_presentation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>