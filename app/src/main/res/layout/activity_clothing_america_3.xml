<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general_clothing_information_pages.characters.Clothing_America_3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_back_page_clothing_america_3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/black"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_clothing_america_3_detailed"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/clothing_america3_preta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info_clothing_america_3_detailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camisa Preta do CapitÃ£o America \n\n\n R$ 100"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/ic_back_page_clothing_america_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_clothing_america_3_detailed"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info_amount_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantidade"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_clothing_america_3_detailed"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/the_amount"
        android:background="@drawable/container_amount"
        android:text="0"
        android:textColor="@color/black"
        android:gravity="right"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/info_amount_clothes"
        app:layout_constraintEnd_toEndOf="@id/info_amount_clothes"
        app:layout_constraintTop_toBottomOf="@id/info_amount_clothes"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_decreasing_amount"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/container_amount"
        android:text="-"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/info_amount_clothes"
        app:layout_constraintRight_toLeftOf="@id/the_amount"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_increasing_amount"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:background="@drawable/container_amount"
        android:text="+"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/info_amount_clothes"
        app:layout_constraintLeft_toRightOf="@id/the_amount"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info_clothing_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tamanho"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/the_amount"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/size_p"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="P"
        android:layout_marginStart="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_clothing_size"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/size_m"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="M"
        app:layout_constraintStart_toEndOf="@id/size_p"
        app:layout_constraintTop_toBottomOf="@id/info_clothing_size"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/size_g"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="G"
        app:layout_constraintStart_toEndOf="@id/size_m"
        app:layout_constraintTop_toBottomOf="@id/info_clothing_size"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/size_gg"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="GG"
        app:layout_constraintStart_toEndOf="@id/size_g"
        app:layout_constraintTop_toBottomOf="@id/info_clothing_size"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_payment_page_clothing_america_3_detailed"
        style="@style/button_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/ic_payment"
        android:text="COMPRAR"
        app:layout_constraintStart_toStartOf="@id/size_m"
        app:layout_constraintTop_toBottomOf="@id/size_m"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>